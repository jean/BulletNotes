{
  "name": "BulletNotes",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "meteor --settings settings.json",
    "ios": "meteor run ios --port 5004",
    "pretest": "npm run lint --silent && coffeelint imports/",

    "test": "meteor test --driver-package practicalmeteor:mocha --port 5000 --settings settings.json",
    "test:cli": "meteor test --once --driver-package dispatch:mocha-phantomjs --port 5001",
    "test:watch": "TEST_WATCH=1 meteor test --driver-package dispatch:mocha-phantomjs --port 5002",

    "test:app": "meteor npm run coverage-app-unit && meteor npm run coverage-app-full && meteor npm run coverage-packages",
    "test-app-unit": "spacejam --driver-package=practicalmeteor:mocha-console-runner test",
    "test-app-unit-watch": "meteor --driver-package=practicalmeteor:mocha-console-runner test",
    "coverage-app-unit": "spacejam --driver-package=practicalmeteor:mocha-console-runner test --coverage 'out_lcovonly out_coverage out_html' -s settings.json",
    "test-app-full": "spacejam --driver-package=practicalmeteor:mocha-console-runner test --full-app",
    "test-app-full-watch": "meteor --driver-package=practicalmeteor:mocha-console-runner test --full-app",
    "test-app-full:dispatch": "meteor test --full-app --once --driver-package dispatch:mocha-phantomjs",
    "coverage-app-full": "spacejam --driver-package=practicalmeteor:mocha-console-runner test --full-app --coverage 'out_lcovonly out_coverage out_html in_coverage'  -s settings.json",
    "test-packages": "spacejam --driver-package=practicalmeteor:mocha-console-runner test-packages --full-app",
    "test-packages-watch": "meteor --driver-package=practicalmeteor:mocha-console-runner test-packages",
    "coverage-packages": "spacejam --driver-package=practicalmeteor:mocha-console-runner test-packages --coverage 'out_lcovonly out_html out_remap in_coverage'  -s settings.json",
    "coverage-packages-html": "spacejam --driver-package=practicalmeteor:mocha-console-runner test-packages --coverage out_html",
    "lint": "eslint . || exit 0;",
    "lint:fix": "eslint --fix ."
  },
  "dependencies": {
    "autoprefixer": "^6.3.1",
    "babel-runtime": "^6.22.0",
    "bcryptjs": "^2.4.0",
    "dropbox": "^2.5.0",
    "faker": "^3.0.1",
    "meteor-node-stubs": "~0.2.3",
    "sanitize-html": "^1.14.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.0",
    "codacy-coverage": "^2.0.0",
    "codecov.io": "^0.1.6",
    "coveralls": "^2.11.11",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-meteor": "^0.2.4",
    "eslint-plugin-import": "^1.10.3",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^5.2.2",
    "shell-source": "^1.1.0",
    "spacejam": "https://github.com/serut/spacejam/tarball/windows-suppport-rc4"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "no-underscore-dangle": "off",
      "meteor/eventmap-params": [
        "error",
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        "off"
      ]
    },
    "settings": {
      "import/resolver": "meteor"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
