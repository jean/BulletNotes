  a.openMoveTo(href='#', data-toggle='modal', data-target='#moveTo_{{_id}}', data-id='{{_id}}', id='toggleMoveTo_{{_id}}') open

  .modal.fade(id="moveTo_{{_id}}", tabindex='-1', role='dialog')
    .modal-dialog
      form.modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
          h4#myModalLabel.modal-title Move Note
        .modal-body
            p 
            {{> inputAutocomplete settings=settings class="moveToInput input-xlarge" placeholder="Select a note to move this note under.." size="40"}}
        .modal-footer
          button.btn.btn-sm(data-dismiss='modal') Cancel

template(name="notePill")
