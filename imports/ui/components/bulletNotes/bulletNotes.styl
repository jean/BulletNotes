@import '{}/imports/ui/stylesheets/utils'


ol#notes
  padding: 1em 0 .5em
  margin: 0
  list-style-type: none
  border: solid 1px black
  box-shadow: 0px 0px 10px #000
  background-color: white
  transition: all 200ms ease-in;
  ol
    padding-left: 25px
    list-style: none
  li
    border: solid 1px rgba(0,0,0,0)

@media screen and (min-width: 60em)
  ol#notes
    margin: 0 5em
    padding: 5em 5em

ol#notes.sorting
  li
    border: dotted 1px gray

.page.notes-show
  .newNote
    margin: 3em
    cursor: pointer
    font-size: 1em
    opacity: .7
    padding: 1em
  .newNote:hover
    border: dotted gray 1px !important

select.list-edit
  @extend .font-m2
  position(absolute, 0,0,0,0)
  background: transparent
  opacity: 0 // allows the cog to appear

.options-web
  display: none

  .nav-item
    @extend .font-m3
    width: 2rem

    &:last-child { margin-right: .5rem; }

li.body
  margin: 1em
  padding: 1em;
  border-radius: 1em;

// Hide & show options and nav icons
@media screen and (min-width: 40em) {
  .options-mobile { display: none; }
  .options-web {  display: block; }
}

.options-web
  display: none

  .nav-item
    @extend .font-m3;
    width: 2rem

    &:last-child
      margin-right: .5rem

.noNoteMessage
  text-align: center
  margin: 1em

.nav-group.right
  right: 0
  left: auto
  .nav-item
    font-size: 20px;
    line-height: 24px;
    color: #1c3f53;
    display: inline-block;
    height: 2rem;
    text-align: center;
    width: 2rem;

.childWrap
  padding-left: 1em